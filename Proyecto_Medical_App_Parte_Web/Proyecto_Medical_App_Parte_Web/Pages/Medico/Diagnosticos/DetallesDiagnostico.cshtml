        <label class="control-label" asp-for="diagnostico.notas_Diagnostico"></label>
        <input class="form-control" asp-for="diagnostico.notas_Diagnostico" />
        <span class="text-danger" asp-validation-for="diagnostico.notas_Diagnostico"></span>
    </div>


 

    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group">
        <a class="btn btn-primary" asp-page="./Index">Regresar</a>
