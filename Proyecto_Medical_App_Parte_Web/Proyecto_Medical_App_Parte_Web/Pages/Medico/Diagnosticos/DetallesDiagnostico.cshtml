}

<h1>Detalles Diagnosticos</h1>

<form method="post">
    <div class="form-group">
        <label class="control-label" asp-for="diagnostico.id_EnferDiagnostico" style="display: none;"></label>
        <input class="form-control" asp-for="diagnostico.id_EnferDiagnostico" style="display: none;" />
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="diagnostico.nombre"></label>
        <input class="form-control" asp-for="diagnostico.nombre" />
        <span class="text-danger" asp-validation-for="diagnostico.nombre"></span>
    </div>

    <div class="form-group">
        <label class="control-label" asp-for="diagnostico.fase_Enfermedad"></label>
        <input class="form-control" asp-for="diagnostico.fase_Enfermedad" />
